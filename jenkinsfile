pipeline {
  agent any

  tools {
    maven 'M2_HOME'
    }
  
  stages {
    stage('CheckOut') {
      steps {
        echo 'Checkout the source code from GitHub'
	git 'https://github.com/noor1718/star-agile-banking-finance.git'
            }
    }
    
    stage('Package the Application') {
      steps {
        echo " Packaging the Application"
        sh 'mvn clean package'
            }
        }
    stage('publish HTML reports') {
      steps {
        echo "publish HTML reports "
        publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: '/var/lib/jenkins/workspace/bankingproject', reportFiles: 'index.html', reportName: 'HTML Report', reportTitles: '', useWrapperFileDirectly: true])
            }
        }
    
    stage('docker image build') {
      steps {
        echo "docker image build "
	sh 'docker build -t noor1718/banking-project:latest .'           
 }
}
    stage('docker login') {
      steps {
        echo "docker login "
	withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerhubpasswrd', usernameVariable: 'dockerhubusername')]) {
	sh "docker login -u ${env.dockerhubusername} -p ${env.dockerhubpasswrd}"
}
}
}
    stage('docker push') {
      steps {
        echo "docker push "
	sh "docker push noor1718/banking-project:latest"
}
 }

        }
    }
   


